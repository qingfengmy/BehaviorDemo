            android:text="hello"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_flexbox"
            android:padding="5dp"
            android:text="hello world"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_flexbox"
            android:padding="5dp"
            android:text="hello android"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_flexbox"
            android:padding="5dp"
            android:text="hello abcdefghigklmn"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_flexbox"
            android:padding="5dp"
            android:text="hello nba"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_flexbox"
            android:padding="5dp"
            android:text="hello"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_flexbox"
            android:padding="5dp"
            android:text="hello"
            android:textColor="@color/colorAccent" />

    </com.google.android.flexbox.FlexboxLayout>
</LinearLayout>
